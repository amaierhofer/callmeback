<% icon_sizes = [48, 72, 96, 144, 192, 512] %>
{
  "name": "CallMeBack",
  "short_name": "CMB",
  "start_url": "/",
  "icons": [
  <% icon_sizes.map { |s| "#{s}-#{s}" }.each.with_index do |dim, i| %>
    {
      "src": "<%= image_path "android-launchericon-#{dim}.png" %>",
      "sizes": "<%= dim.gsub('-', 'x') %>",
      "type": "image/png"
    }<%= i == (icon_sizes.length - 1) ? '' : ',' %>
  <% end %>
  ],
  "theme_color": "#000000",
  "background_color": "#FFFFFF",
  "display": "fullscreen",
  "orientation": "portrait",
  "gcm_sender_id": "882534666017"
}
